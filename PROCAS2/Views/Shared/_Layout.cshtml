@using Microsoft.AspNet.Identity

@using PROCAS2.CustomHtmlHelpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="SHORTCUT ICON" href="~/Content/icons/index.ico" />
    <title>@ViewBag.Title - PROCAS2 Collator</title>




    @Styles.Render("~/Content/css")


    <link href="@Url.Content("~/Content/DataTables/css/datatables.bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/DataTables/css/fixedColumns.bootstrap.min.css")" rel="stylesheet" type="text/css" />
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/unob")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryconfirm")
    @Scripts.Render("~/bundles/datatables")






    @RenderSection("scripts", required: false)

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                @if (Html.IsTestBuild())
                {<p class="navbar-brand navbar-left testBrand">
                    <span>Test Server</span>
                </p> }
                else
                { <p class="navbar-brand navbar-left mainBrand">
                    <span>PROCAS2 Collator</span>
                </p> }

                

            </div>
            <div class="navbar-collapse collapse">

                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">

                        <li>@Html.ActionLink("Dashboard", "Index", "Home")</li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Participant
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("View/Edit Participant", "Index", "Participant")</li>
                                <li>@Html.ActionLink("Upload New Participants", "UploadNew", "Participant")</li>
                                <li>@Html.ActionLink("Update Participants", "UploadUpdate", "Participant")</li>
                                <li>@Html.ActionLink("Mark Participants to Ask For Risk Letters", "UploadAskRisk", "Participant")</li>
                                <li>@Html.ActionLink("Upload Screening Outcomes", "UploadScreeningOutcomes", "Participant")</li>
                                <li>@Html.ActionLink("Edit Histology", "Index", "Histology")</li>
                                <li>@Html.ActionLink("Query Patient History", "ParticipantHistory", "Participant")</li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Letters
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Ask For Risk Letters", "AskForRiskLetters", "Report")</li>
                                <li>@Html.ActionLink("Export Letters", "Export", "Export")</li>
                            </ul>
                        </li>

                        <li>@Html.ActionLink("Reports", "Index", "Report")</li>

                        @if (Html.IsTestBuild())
                        {
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    Test
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Receive Consent", "ReceiveConsent", "Test")</li>
                                    <li>@Html.ActionLink("Receive Letter and Survey Response", "ReceiveLetter", "Test")</li>
                                    <li>@Html.ActionLink("Receive Volpara Data", "ReceiveVolpara", "Test")</li>
                                </ul>
                            </li>
                        }

                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Pilot Phase 1a
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Receive Consent", "ReceiveConsent", "Phase1")</li>
                                
                                <li>@Html.ActionLink("Send Consent to Volpara", "SendVolpara", "Phase1")</li>

                                <li>@Html.ActionLink("Delete Participant", "DeleteParticipant", "Participant")</li>
                                
                            </ul>
                        </li>

                    </ul>

                }
                @Html.Partial("_LoginPartial")

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row ">
                <div class="col-md-6">
                    <p>

                    </p>



                </div>

                <div class="col-md-6 footer-image">
                    <p>
                        <img alt="University logo" src='@Url.Content("~/Content/images/uni.png")' class="image-responsive" />
                    </p>
                </div>
            </div>
        </footer>
    </div>


</body>
</html>
