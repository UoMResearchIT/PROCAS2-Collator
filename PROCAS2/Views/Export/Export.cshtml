@model PROCAS2.Models.ViewModels.ExportLettersViewModel

@using PROCAS2.Resources

@{
    ViewBag.Title = "Export Letters";
}
<script src="@Url.Content("~/Scripts/jquery-3.2.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.cookie.js")"></script>
<script src="@Url.Content("~/Scripts/spin.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.spin.js")"></script>
<script src="@Url.Content("~/js/exportLetters.js")"></script>


<h2>Export Letters</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.NHSNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NHSNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NHSNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @ExportResources.EXPORT_OR
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AllReady, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.AllReady)
                    @Html.ValidationMessageFor(model => model.AllReady, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
                @Html.LabelFor(model => model.SiteToProcess, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @ExportResources.TRUST_MFT
                    @Html.RadioButtonFor(model => model.SiteToProcess, "MFT", htmlAttributes: new { @class = "siteToProcess" })

                </div>

           
            <div class="col-md-3">
                @ExportResources.TRUST_EASTLANCS
                @Html.RadioButtonFor(model => model.SiteToProcess, "EASTLANCS", htmlAttributes: new { @class = "siteToProcess" })

            </div>

            
            <div class="col-md-4">
                @ExportResources.TRUST_EASTCHESHIRE
                @Html.RadioButtonFor(model => model.SiteToProcess, "EASTCHESHIRE", htmlAttributes: new { @class = "siteToProcess" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" id="btnSubmit" />
            </div>
        </div>
    </div>
}



<div id="exportElement" class="spinnerElement">

    <div id="exportSection" class="spinnerSection">Generating Letters</div>
</div>
