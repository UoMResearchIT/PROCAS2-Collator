@model PROCAS2.Models.ViewModels.ParticipantDetailsViewModel

@using PROCAS2.Resources;
@using PROCAS2.Data.Entities;


@{
    ViewBag.Title = "Participant Details";
}

<div class="row">
    <div class="col-md-10">
        <h4>Participant Details - @Model.NHSNumber</h4>
    </div>
    <div class="col-md-2">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#modalGP">
            @ParticipantResources.GP_MODAL_TITLE
        </button>
        @Html.ActionLink("Edit", "Edit", new { participantId = Model.Participant.NHSNumber }, new { @class="btn btn-primary "}) 
    </div>
</div>

    

    <!-- Modal -->
    <div class="modal fade" id="modalGP" tabindex="-1" role="dialog" aria-labelledby="lblGP">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="lblGP">@ParticipantResources.GP_MODAL_TITLE</h4>
            </div>
            <div class="modal-body gpModal">
                <div class="row">
                    <div class="row">

                        @Html.LabelFor(model => model.GPName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.GPName, new { htmlAttributes = new { @class = "form-control-static" } })

                        </div>
                    </div>

                    <div class="row">
                        @Html.LabelFor(model => model.GPAddress1, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.GPAddress1, new { htmlAttributes = new { @class = "form-control-static" } })

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-10 col-md-offset-2">
                            @Html.DisplayFor(model => model.GPAddress2, new { htmlAttributes = new { @class = "form-control-static" } })
                            &nbsp;
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-10 col-md-offset-2">
                            @Html.DisplayFor(model => model.GPAddress3, new { htmlAttributes = new { @class = "form-control-static" } })
                            &nbsp;
                        </div>
                    </div>

                    <div class="row">
                         <div class="col-md-10 col-md-offset-2">
                            @Html.DisplayFor(model => model.GPAddress4, new { htmlAttributes = new { @class = "form-control-static" } })
                             &nbsp;
                        </div>
                    </div>

                    <div class="row">
                        @Html.LabelFor(model => model.GPPostCode, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.GPPostCode, new { htmlAttributes = new { @class = "form-control-static" } })

                        </div>
                    </div>

                    <div class="row">
                        @Html.LabelFor(model => model.GPEmail, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.GPEmail, new { htmlAttributes = new { @class = "form-control-static" } })

                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>


