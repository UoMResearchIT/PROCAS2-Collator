<div>

    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#pnlHistory" aria-controls="pnlHistory" role="tab" data-toggle="tab">History</a></li>
        <li role="presentation"><a href="#pnlVolpara" aria-controls="pnlVolpara" role="tab" data-toggle="tab">Volpara</a></li>
        <li role="presentation"><a href="#pnlQuestionnaire" aria-controls="pnlQuestionnaire" role="tab" data-toggle="tab">Questionnaire</a></li>
        <li role="presentation"><a href="#pnlRiskLetter" aria-controls="pnlRiskLetter" role="tab" data-toggle="tab">Risk Letter</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="pnlHistory">
            <div class="panel panel-primary participantViewPanel">
                <div class="panel-heading">History</div>
                <div class="panel-body">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>
                                    @ParticipantResources.EVENT_DATE
                                </th>
                                <th>
                                    @ParticipantResources.EVENT_NAME
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ParticipantEvent pEvent in Model.Participant.ParticipantEvents.OrderByDescending(x => x.EventDate))
                            {
                                <tr>
                                    <td>
                                        @pEvent.EventDate.ToString()
                                    </td>
                                    <td>
                                        @pEvent.Notes
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>

        <div role="tabpanel" class="tab-pane" id="pnlVolpara">
            <div class="panel panel-primary participantViewPanel">
                <div class="panel-heading">Volpara</div>
                <div class="panel-body"></div>
            </div>
        </div>

        <div role="tabpanel" class="tab-pane" id="pnlQuestionnaire">
            <div class="panel panel-primary participantViewPanel">
                <div class="panel-heading">Questionnaire</div>
                <div class="panel-body"></div>
            </div>
        </div>

        <div role="tabpanel" class="tab-pane" id="pnlRiskLetter">
