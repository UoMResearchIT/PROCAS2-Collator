@if (@Model.Participant.Images.Count > 0)
{
                                            <span class="rw-number-notification">@Model.Participant.Images.Count</span>
}
                                        </span>
                                    </a></li>
        <li role="presentation"><a href="#pnlRiskLetter" aria-controls="pnlRiskLetter" role="tab" data-toggle="tab">Risk Letter
                                    <span class="glyphicon glyphicon-envelope">
                                        @if (@Model.Participant.RiskLetters.Count > 0)
            {
                                            <span class="rw-number-notification">@Model.Participant.RiskLetters.Count</span>
                                        }
                                        </span>
</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="pnlHistory">
            <div class="panel panel-primary participantViewPanel">
                <div class="panel-heading">History</div>
                <div class="panel-body">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>
                                    @ParticipantResources.EVENT_DATE
                                </th>
                                <th>
                                    @ParticipantResources.EVENT_NAME
                                </th>
                                <th>
                                    @ParticipantResources.EVENT_USER
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ParticipantEvent pEvent in Model.Participant.ParticipantEvents.OrderByDescending(x => x.EventDate))
                            {
                                <tr>
                                    <td>
                                        @pEvent.EventDate.ToString()
                                    </td>
                                    <td>
                                        @pEvent.Notes
                                    </td>
                                    <td>
                                        @pEvent.AppUser.UserCode
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>

        <div role="tabpanel" class="tab-pane" id="pnlVolpara">
            <div class="panel panel-primary participantViewPanel">
                <div class="panel-heading clearfix">
                   Volpara
                        @Html.ActionLink("View Full Details", "ViewScreenV1_5_4", "Screening", new { id = Model.NHSNumber }, new { @class = "btn btn-default pull-right" })


                    


                </div>
                <div class="panel-body">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>
                                    @ParticipantResources.DATA_RECEIVED
                                </th>
                                <th>
                                    @ParticipantResources.BREAST_SIDE
                                </th>
                                <th>
                                    @ParticipantResources.STUDY_DATE
                                </th>
                                <th>
                                    @ParticipantResources.VOLPARA_VERSION
                                </th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ScreeningRecordV1_5_4 screen in Model.Participant.ScreeningRecordV1_5_4s.OrderByDescending(x => x.DataDate))
                            {
                                <tr>
                                    <td>
                                        @String.Join(" ", new string[] { screen.DataDate.ToShortDateString(), " ", @screen.DataDate.ToShortTimeString() })
                                    </td>
                                    <td>
                                        @screen.BreastSide
                                    </td>
                                    <td>
                                        @if (screen.StudyDate.HasValue == true) {
                                            @screen.StudyDate.Value.ToShortDateString() 
                                        } else {
                                            @ParticipantResources.UNKNOWN }
                                    </td>
                                    <td>
                                        @screen.Version
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div role="tabpanel" class="tab-pane" id="pnlQuestionnaire">
            <div class="panel panel-primary participantViewPanel">
