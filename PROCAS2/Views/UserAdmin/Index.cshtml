@model PROCAS2.Models.ViewModels.UserAdminIndexViewModel
@{
    ViewBag.Title = "User Admin";
}

<script src="~/js/userAdmin.js" type="text/javascript"></script>

<div class="row">
    <div class="col-md-9">
        <p>
            <h3>Configure users</h3>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @if (Model.AppUsers.Count > 0)
        {
            <table id="tblUsers" class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            User Name
                        </th>

                        <th>
                            Super User?
                        </th>
                        <th>
                            Active?
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.AppUsers)
                {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserCode)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.SuperUser)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Active)
                            </td>
                            <td class="actionList">

                                @if (item.Active == true)
                                {
                                    @Html.ActionLink("Suspend", "Suspend", new { userId = item.Id, flag = false}, new { @class="btn btn-danger pull-right" })
                                }
                                else
                                {
                                    @Html.ActionLink("Reactivate", "Suspend", new { userId = item.Id, flag = true }, new { @class = "btn btn-default pull-right" })
                                }

                                @if (item.SuperUser == true)
                                {
                                    @Html.ActionLink("Make General User", "SuperUser", new { userId = item.Id, flag=false }, new { @class = "btn btn-default pull-right" })
                                }
                                else
                                {
                                    @Html.ActionLink("Make Super User", "SuperUser", new { userId = item.Id, flag=true }, new { @class = "btn btn-danger pull-right" })
                                }

                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        }
        else
        {
            <span>There are currently no users.</span>
        }
    </div>
</div>


